{
  "manifest_version": 3,
  "name": "My Rich Note Taker",
  "version": "1.0.0",
  "description": "A rich note-taking extension with web clipping and Google Drive sync",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+W",
        "windows": "Alt+W",
        "mac": "Alt+W",
        "chromeos": "Alt+W",
        "linux": "Alt+W"
      },
      "description": "Open quick clip popup"
    },
    "open-dashboard": {
      "suggested_key": {
        "default": "Alt+S",
        "windows": "Alt+S",
        "mac": "Command+Shift+S",
        "chromeos": "Alt+S",
        "linux": "Alt+S"
      },
      "description": "Open dashboard"
    }
  },
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata"
    ]
  }
}
